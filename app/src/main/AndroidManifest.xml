<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.animalclassification">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/squirrel"
        android:label="@string/app_name"
        android:roundIcon="@drawable/img"
        android:supportsRtl="true"
        android:theme="@style/Theme.AnimalClassification">
        <activity
            android:name=".AnimalDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".EditorActivity"
            android:exported="false" />
        <activity
            android:name=".AnimalList"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:authorities="com.example.animalclassification.database"
            android:name=".database.AnimalProvider"
            android:exported="false"/>
    </application>

</manifest>